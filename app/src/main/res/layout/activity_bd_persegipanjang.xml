<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bd_persegipanjang">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/rpersegipanjang" />

    <TextView
        android:text="Panjang :"
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:text=""
        android:id="@+id/txtPanjang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"></EditText>

    <TextView
        android:text="Lebar :"
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:text=""
        android:id="@+id/txtLebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"></EditText>
    <Button
        android:text="Hitung Luas"
        android:id="@+id/btnHitung"
        android:layout_width="fill_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:background="#9C3C6A81"
        android:onClick="hitungLuas">

    </Button>
    <TextView
        android:text="Luas :"
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </TextView>
    <EditText
        android:text=""
        android:id="@+id/txtLuas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false">

    </EditText>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:background="#9C3C6A81"
        android:textStyle="bold" />

</LinearLayout>