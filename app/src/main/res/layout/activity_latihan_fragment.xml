<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LatihanFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#FAF7F7"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:background="#8103A9F4"
                android:id="@+id/linePilGan"
                android:onClick="linePilGan"
                tools:ignore="OnClick"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/math" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:text="Latihan pilihan \n ganda"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="#FAF7F7"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="#8103A9F4"
                android:id="@+id/LineEssay"
                android:onClick="lineEssay"
                tools:ignore="OnClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/math" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:text="Latihan Essay"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="110dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:background="#11FFFFFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:onClick="Pembahasan"
                tools:ignore="OnClick"
                android:background="#8103A9F4"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="95dp"
                    android:src="@drawable/kal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:text="Pembahasan"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
