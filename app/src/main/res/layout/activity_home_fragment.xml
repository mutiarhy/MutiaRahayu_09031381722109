<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5103A9F4"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        tools:context=".welcome">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#11FFFFFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:background="#25FFFFFF"
                android:onClick="kalkulator"
                tools:ignore="OnClick"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="95dp"
                    android:src="@drawable/kal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:text="Kalkulator"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#FAF7F7"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:background="#81FFFFFF"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="konversimatauang"
                    android:orientation="vertical"
                    tools:ignore="OnClick">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/uang" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:text="Konversi mata uang"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#FAF7F7"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#81FFFFFF"
                    android:id="@+id/move_konversisuhu"
                    android:onClick="konversisuhu"
                    android:orientation="vertical"
                    tools:ignore="OnClick">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="120dp"
                        android:src="@drawable/suhu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konversi suhu"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#11FFFFFF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:background="#25FFFFFF"
                    android:onClick="persegipanjang"
                    tools:ignore="OnClick"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ppanjangg" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textStyle="italic"
                        android:text="Persegi panjang"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#FAF7F7"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#81FFFFFF"
                    android:onClick="lingkaran"
                    android:orientation="vertical"
                    tools:ignore="OnClick">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lingkaran" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="lingkaran"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#FAF7F7"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#81FFFFFF"
                    android:onClick="segitiga"
                    android:orientation="vertical"
                    tools:ignore="OnClick">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_marginTop="9dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/segitigaa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Segitiga"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
