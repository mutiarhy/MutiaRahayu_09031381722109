<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RumusFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="454dp"
            android:src="@drawable/m1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/m2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:src="@drawable/m3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Konversi Suhu"
            android:textColor="#FFFFFF"
            android:background="#35B4F7"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:src="@drawable/k" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="440dp"
            android:src="@drawable/kk" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="550dp"
            android:src="@drawable/kkk" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:src="@drawable/kkkk" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/kkkkk" />

    </LinearLayout>
</ScrollView>
